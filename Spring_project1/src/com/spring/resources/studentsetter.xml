<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="student1" class="com.spring.bean.Student" scope = "singleton">
		<property name="rollNo" value="101"></property>
		<property name="name" value="Raj"></property>
		<property name="salary" value="70000"></property>
	</bean>

	<bean id="exam1" class="com.spring.bean.Exam" scope = "prototype">
		<property name="eId" value="201"></property>
		<property name="name" value="Ip"></property>
		<property name="marks" value="80"></property>
	</bean>




</beans>